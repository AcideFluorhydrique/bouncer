{
    "id": "com.github.justinrdonnelly.ZoneDefense",
    "runtime": "org.gnome.Platform",
    "runtime-version": "46",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.node18",
        "org.freedesktop.Sdk.Extension.typescript"
    ],
    "command": "com.github.justinrdonnelly.ZoneDefense",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--system-talk-name=org.freedesktop.NetworkManager",
        "--system-talk-name=org.fedoraproject.FirewallD1"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/typescript/bin:/usr/lib/sdk/node18/bin",
        "env": {}
    },
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "zone-defense",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "file:///mnt/share/nfs/code/my-code/zone-defense",
                    "branch": "main"
                }
            ],
            "config-opts": [
                "--libdir=lib"
            ]
        }
    ]
}
